.schedule-list
  &__title
    font-size 36px
    margin-bottom 22px
    font-weight bold
    color #f06027

  &__wrapper
    display flex
    flex-flow row wrap

  &__item
    width 33.333333%
  
  &__options
    display flex
    flex-flow row nowrap
    justify-content space-between
    margin-bottom 15px

.schedule-navigation
  display flex
  flex-flow row nowrap

  &__item
    margin-right 15px

    &:last-child
      margin-right 0

.schedule-save
  cursor pointer
  display flex
  align-items center
  
  &__input
    opacity 0
    position absolute
    width 1px
    height 1px

    &:checked + ^[0]__styler
      &:after
        content ''
  
  &__styler
    width 20px
    height 20px
    display inline-flex
    background-color #f8f8f8
    border 1px solid #b7b7b7
    margin-right 5px
    align-items center
    justify-content center

    &:after
      width 8px
      height 8px
      display block
      background-color #555